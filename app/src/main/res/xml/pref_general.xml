<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/pref_sort_key"
        android:title="@string/pref_sort_title"
        android:defaultValue="@string/popularity_desc"
        android:entries="@array/pref_sort_list_titles"
        android:entryValues="@array/pref_sort_list_values"/>

    <ListPreference
        android:key="@string/num_cols_key"
        android:title="@string/num_cols_title">
    </ListPreference>

    <com.example.lan.samuel_dsldevice.popularmoviesstage2.NumberPickerPreference
        android:key="@string/min_img_dp_size_key"
        android:title="@string/min_img_dp_size_title"
        android:defaultValue="@integer/smallest_img_dp_size" />

    <CheckBoxPreference
        android:key="@string/nav_key"
        android:title="@string/nav_title"
        android:defaultValue="true" />

</PreferenceScreen>
